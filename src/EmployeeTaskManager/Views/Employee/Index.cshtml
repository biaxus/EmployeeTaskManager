@{
    ViewData["Title"] = "Empleados";
}

<div class="container">
    <div class="row">
        <div class="col-sm-8">
            <h2 class="m-b">Información del empleado</h2>
            <div class="row">
                <div class="col-sm-5">
                    <div class="form-group">
                        <label for="txtName">Nombre</label>
                        <input type="text" class="form-control" id="txtName" placeholder="Nombre">
                    </div>
                </div>
                <div class="col-sm-5">
                    <div class="form-group">
                        <label for="txtPosition">Cargo</label>
                        <input type="text" class="form-control" id="txtPosition" placeholder="Cargo">
                    </div>
                </div>
                <div class="col-sm-2 text-center">
                    <button class="btn btn-warning btn-xs text-center" disabled style="margin-top:20px;">Edit</button>
                    <button class="btn btn-danger btn-xs text-center" disabled style="margin-top:20px;">Delete</button>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-8"><h2>Tareas</h2></div>
                <div class="col-sm-4">
                    <button class="btn btn-primary btn-xs pull-right" style="margin-top:20px;">Add</button>
                    <button class="btn btn-warning btn-xs pull-right" disabled style="margin-top:20px;">Edit</button>
                    <button class="btn btn-danger btn-xs pull-right" disabled style="margin-top:20px;">Delete</button>
                </div>
            </div>    
            <div class="row">                
                <div class="col-sm-4">
                    <div class="form-group">
                        <label for="txtDescription">Descripci&oacute;n</label>
                        <input type="text" class="form-control" id="txtDescription" placeholder="Texto que describe la tarea">
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label for="txtStartDate">Fecha Inicio</label>
                        <input type="text" class="form-control" id="txtStartDate" placeholder="2016/10/10">
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label for="txtEndDate">Fecha Fin</label>
                        <input type="text" class="form-control" id="txtEndDate" placeholder="2016/11/10">
                    </div>
                </div>
            </div>
            <div class="row">
                <table id="datatable-task" class="table table-bordered table-striped table-hover table-condensed">
                    <thead>
                        <tr>
                            <th>Descripci&oacute;n</th>
                            <th>Incio</th>
                            <th>Fin</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Investigaci&oacute;n de nuevas tecnologias</td>
                            <td>2016/11/04</td>
                            <td>2016/11/05</td>
                        </tr>
                        <tr>
                            <td>Analisis de requerimientos del requerimiento</td>
                            <td>2016/11/06</td>
                            <td>2016/11/07</td>
                        </tr>
                        <tr>
                            <td>Implementaci&oacute;n</td>
                            <td>2016/11/08</td>
                            <td>2016/11/09</td>
                        </tr>
                    </tbody>
                </table>
            </div>                 
        </div>
        <div class="col-sm-4">
            <div class="row m-b">
                <div class="col-sm-8"><h2>Empleados</h2></div>
                <div class="col-sm-4"><button class="btn btn-primary btn-xs pull-right" style="margin-top:20px;">Add</button></div>
            </div>
            <table id="datatable" class="table table-bordered table-striped table-hover table-condensed">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Cargo</th>
                    </tr>
                </thead>
                <tbody>
                    
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/lib/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" />
    <link rel="stylesheet" href="~/lib/datatables/media/css/dataTables.bootstrap.min.css" />
}

@section Scripts {
    <script type="text/javascript" src="~/lib/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script type="text/javascript" src="~/lib/datatables/media/js/jquery.dataTables.js"></script>
    <script type="text/javascript" src="~/lib/datatables/media/js/dataTables.bootstrap.min.js"></script>
    <script type="text/javascript">
        var oTable;
        $(document).ready(function () {
            oTable = $('#datatable').DataTable({
                "paging": false,
                "info": false,
                "processing": true,
                "searching": false,
                "order": [[0, 'asc']],
                "ajax": {
                    "url": "/Employee/LoadTable",
                    "type": "GET"
                },
                "columns": [
                    { "data": "name" },
                    { "data": "position" },
                ]               
            });
        });
    </script>
}